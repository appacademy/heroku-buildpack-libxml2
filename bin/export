#!/bin/sh

set -e

BUILD_DIR=$1

export PATH="$BUILD_DIR/vendor/libxml2/bin:$PATH"
export LIBRARY_PATH="$BUILD_DIR/vendor/libxml2/lib:$LIBRARY_PATH"
export LD_LIBRARY_PATH="$BUILD_DIR/vendor/libxml2/lib:$LD_LIBRARY_PATH"
export INCLUDE_PATH="$BUILD_DIR/vendor/libxml2/include:$INCLUDE_PATH"

#export PKG_CONFIG_PATH="$BUILD_DIR/vendor/libxml2/lib/pkgconfig/:$PKG_CONFIG_PATH"
#export LDFLAGS="$LDFLAGS "
export CFLAGS="$CFLAGS -L$BUILD_DIR/vendor/libxml2/lib -I$BUILD_DIR/vendor/libxml2/include"
